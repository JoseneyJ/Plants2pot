{{#if loggedIn}}
<section class="product">
  <img src="/images/{{product.image_source}}" alt="{{product.description}}">
  <div class="product-details">
    <h3>{{product.product_name}}</h3>
    <p>Price $: {{product.price}}</p>
  </div>
</section>
{{else}}
<a href="/login">You must login first to view this plant</a>
{{/if}}