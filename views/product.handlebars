{{#if logged_in}}
<section class="product">
  <img src="/images/{{product.image_source}}"> 
  <div class="product-details">
    <h3>{{product.product_name}}</h3>
    <p>Price $: {{product.price}}</p>
    <p>{{product.description}}</p>
    </div>
</section>
<div class="card-login-first">
{{else}}
<h2 href="/login">You must login first to view this plant</h2>
{{/if}}
</div>